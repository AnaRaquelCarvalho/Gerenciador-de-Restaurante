<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="flex flex-col md:flex-row gap-8">
    
    <aside class="w-full md:w-48 flex-shrink-0">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">Shop</h1>
      <h2 class="text-sm uppercase tracking-widest font-semibold text-gray-500 mb-4">Filtro</h2>
      <%# Aqui vocÃª pode adicionar links de subcategorias futuramente %>
      <div class="h-px bg-gray-200 w-full mb-6"></div>
    </aside>

    <main class="flex-1">
      <div class="flex flex-wrap gap-x-8 gap-y-12 justify-start items-start">
        <% if @products.empty? %>
          <div class="w-full text-center py-20">
            <p class="text-2xl text-gray-400">Nenhum produto encontrado nesta categoria.</p>
          </div>
        <% else %>
          <% @products.each do |product| %>
            <%= link_to product_path(product), class: "group" do %>
              <div class="flex flex-col">
                <div class="w-64 h-64 overflow-hidden rounded-xl bg-gray-100 flex items-center justify-center">
                  <% if product.images.any? %>
                    <%= image_tag product.images.first, class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" %>
                  <% else %>
                    <%= image_tag "https://via.placeholder.com/250", class: "rounded-xl" %>
                  <% end %>
                </div>
                
                <p class="mt-4 text-lg font-medium text-gray-800 group-hover:text-orange-600 transition-colors text-center">
                  <%= product.name %>
                </p>
                <p class="text-gray-500 text-sm text-center">R$ <%= product.price %></p>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </main>

  </div>
</div>