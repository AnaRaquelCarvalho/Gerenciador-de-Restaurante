<div class="min-h-screen bg-white flex items-center justify-center p-8">
  <div class="max-w-6xl w-full grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
    
    <div class="flex flex-col items-center justify-center space-y-4">
      <% if @product.images.any? %>
        <%# Exibe a primeira imagem com destaque %>
        <%= image_tag @product.images.first, class: "w-full max-w-md h-auto object-contain rounded-lg shadow-sm" %>
        
        <%# Miniaturas caso haja mais de uma imagem %>
        <div class="flex gap-2">
          <% @product.images.drop(1).each do |image| %>
            <%= image_tag image, class: "w-20 h-20 object-cover border rounded" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="flex flex-col items-start">
      <h1 class="text-5xl font-extrabold uppercase tracking-tight text-gray-900">
        <%= @product.name %>
      </h1>
      
      <p class="text-3xl font-light mt-4 text-gray-600">
        R$ <%= @product.price %>
      </p>

      <p class="text-lg text-gray-500 mt-8 leading-relaxed">
        <%= @product.description %>
      </p>

      <div class="mt-10 w-full">
        <p class="uppercase text-sm font-bold tracking-widest text-gray-400 mb-4">Size</p>
        <div class="flex flex-wrap gap-3">
          <% @product.stocks.each do |stock| %>
            <% if stock.amount > 0 %>
              <button class="border-2 border-gray-200 text-gray-800 font-bold py-3 px-6 rounded-md hover:border-black transition-colors focus:bg-black focus:text-white">
                <%= stock.size %>
              </button>
            <% else %>
              <button disabled class="bg-gray-100 text-gray-400 py-3 px-6 rounded-md cursor-not-allowed">
                <%= stock.size %>
              </button> 
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="mt-12 w-full">
        <button class="w-full md:w-auto bg-slate-800 text-white text-lg font-semibold px-12 py-4 rounded-md shadow-lg hover:bg-slate-700 transition-all active:scale-95">
          Adicionar ao Carrinho
        </button>
      </div>
    </div>

  </div>
</div>