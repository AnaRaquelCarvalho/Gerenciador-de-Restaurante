<% content_for :title, @product.name %>

<div class="mx-auto md:w-2/3 w-full">

  <h1 class="font-bold text-4xl mb-6">
    <%= @product.name %>
  </h1>

  <div class="space-y-4">

    <p>
      <strong>Description:</strong><br>
      <%= @product.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= number_to_currency(@product.price) %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @product.category&.name || "No category" %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @product.active? ? "Active" : "Inactive" %>
    </p>

    <% if @product.images.attached? %>
      <div class="flex gap-3 mt-4">
        <% @product.images.each do |image| %>
          <%= image_tag image,
            class: "w-24 h-24 object-cover rounded-md border" %>
        <% end %>
      </div>
    <% end %>

  </div>

  <div class="mt-8 flex items-center gap-3">

    <%= link_to "Edit this product",
      edit_admin_product_path(@product),
      class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium"
    %>

    <%= link_to "Back to products",
      admin_products_path,
      class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    %>

    <%= button_to "Destroy this product",
      admin_product_path(@product),
      method: :delete,
      data: { turbo_confirm: "Are you sure?" },
      class: "rounded-lg py-3 px-5 bg-red-600 text-white font-medium"
    %>

  </div>

</div>
