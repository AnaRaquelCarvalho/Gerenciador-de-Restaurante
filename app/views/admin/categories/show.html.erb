<% content_for :title, "Showing category" %>

<div class="md:w-2/3 w-full">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing category</h1>

  <!-- âŒ REMOVIDO BLOCO DUPLICADO DE IMAGEM -->

  <%= render @admin_category %>

  <div class="mt-6 flex items-center gap-2">

    <%= link_to "Edit this category",
        edit_admin_category_path(@admin_category),
        class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>

    <%= link_to "Back to categories",
        admin_categories_path,
        class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>

    <%= button_to "Destroy this category",
        admin_category_path(@admin_category),
        method: :delete,
        form: { data: { turbo_confirm: "Are you sure?" } },
        class: "px-4 py-2 bg-red-600 text-white rounded" %>

  </div>

</div>
