<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New stock</h1>

  <%= form_with(model: [:admin, @product, @admin_stock], class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :amount %>
      <%= form.number_field :amount, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :size %>
      <%= form.text_field :size, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit "Create Stock", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      <%= link_to "Back to stocks", admin_product_stocks_path(@product), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  <% end %>
</div>