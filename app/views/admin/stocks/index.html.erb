<% content_for :title, "Stocks" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Stocks</h1>

    <%# Correção: Adicionado 'product' ao caminho e passando o ID do produto via params %>
    <%= link_to "New stock",
      new_admin_product_stock_path(params[:product_id]),
      class: "rounded-md px-3.5 py-2.5 bg-blue-600 text-white font-medium" %>
  </div>

  <div class="mt-6 divide-y">
    <% @admin_stocks.each do |stock| %>
      <div class="flex justify-between py-4">
        <div>
          <p><strong><%= stock.product.name %></strong></p>
          <p>Amount: <%= stock.amount %></p>
          <p>Size: <%= stock.size %></p>
        </div>

        <div class="flex gap-2">
          <%# Correção: Rotas aninhadas exigem o par [produto, estoque] %>
          <%= link_to "Show",
            admin_product_stock_path(stock.product, stock),
            class: "px-3 py-2 bg-gray-100 rounded" %>

          <%= link_to "Edit",
            edit_admin_product_stock_path(stock.product, stock),
            class: "px-3 py-2 bg-gray-100 rounded" %>

          <%= button_to "Destroy",
            admin_product_stock_path(stock.product, stock),
            method: :delete,
            data: { turbo_confirm: "Are you sure?" },
            class: "px-3 py-2 bg-red-600 text-white rounded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>